<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:layout_gravity="center"    android:background="@drawable/book_img7"    android:orientation="vertical"    tools:context=".fragments.login.SplashFragment">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:orientation="vertical">        <ImageView            android:layout_width="100dp"            android:layout_height="100dp"            android:layout_gravity="center"            android:src="@drawable/logo" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:gravity="center"            android:text="BookApp"            android:textColor="@color/colorBrown"            android:textSize="30sp"            android:textStyle="bold" />    </LinearLayout>    <RelativeLayout        android:id="@+id/vBtns"        android:visibility="gone"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_gravity="bottom"        android:layout_margin="@dimen/activity_vertical_margin"        android:gravity="bottom">        <Button            android:id="@+id/btn_signup"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="@dimen/activity_vertical_margin"            android:background="@drawable/btn_selector_style"            android:text="@string/signup"            android:textColor="@color/colorWhite"            android:textSize="@dimen/text_size_medium" />        <Button            android:id="@+id/btn_signin"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@+id/btn_signup"            android:background="@drawable/btn_selector_style"            android:text="@string/signin"            android:textColor="@color/colorWhite"            android:textSize="@dimen/text_size_medium" />    </RelativeLayout></RelativeLayout>